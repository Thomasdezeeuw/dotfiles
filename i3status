general {
	output_format = "i3bar"
	colors = true
	interval = 5
}

order += "battery all"
order += "time"

battery all {
	last_full_capacity = true
	integer_battery_capacity = true
	low_threshold = 15
	threshold_type = percentage
	format = "%status %percentage"
}

time {
	# Date and time, e.g. Wed June 6 17:33.
	format = "%a %B %e %H:%M"
}
