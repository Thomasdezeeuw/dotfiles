# Location: ~/.gitconfig

[user]
	name = Thomas de Zeeuw
	email = thomasdezeeuw@gmail.com
[core]
	autocrlf = false
	eol = lf
	editor = vim
	quotepath = false
	pager = diffr | less --raw-control-chars --no-init --quit-if-one-screen
[interactive]
	diffFilter = diffr
[color]
	ui = true
[commit]
	verbose = true
[rebase]
	autostash = true
	autosquash = true
[rerere]
	enabled = true
[push]
	default = current
	autoSetupRemote = true
[pull]
	rebase = true
[alias]
	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset'
	last = log -1 HEAD
	hash = rev-parse HEAD
	# Difference between two branches, arguments: $main $new-branch, e.g. `master WIP`
	bdiff = log --reverse --decorate=no main..
	# Get all commit in this branch, compared to the remote's main branch.
	msg = log --reverse --decorate=no HEAD --not --remotes=*/HEAD
	# List recently worked on branches.
	recent = branch --sort=-committerdate --format=\"%(committerdate:relative)%09%(refname:short)\"
[log]
	decorate = auto
[branch]
	autosetuprebase = always
[filter "lfs"]
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
[diff]
	algorithm = histogram
[init]
	defaultBranch = main
[merge]
	conflictstyle = zdiff3
	# Always create a merge commit.
	ff = false
	# Include some more information in the commit message.
	branchdesc = true
	log = 100
[sendemail]
	annotate = yes
[help]
	autocorrect = prompt
