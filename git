# Location: ~/.gitconfig

[user]
	name = Thomas de Zeeuw
	email = thomasdezeeuw@gmail.com
[core]
	autocrlf = false
	eol = lf
	editor = vim
	quotepath = false
[color]
	ui = true
[rebase]
	autostash = true
[push]
	default = current
[pull]
	rebase = true
[alias]
	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset'
	last = log -1 HEAD
	hash = rev-parse HEAD
	# Difference between two branches, argument: `$branch0..$branch1`, e.g. `master..WIP`
	bdiff = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative
	# Log commits not in HEAD that are in the other branch (argument).
	hdiff = log HEAD..
[log]
	decorate = auto
[branch]
	autosetuprebase = always
[filter "lfs"]
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
[diff]
	algorithm = patience
